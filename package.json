{
	"name": "mayo-design-system",
	"version": "0.0.1",
	"description": "Mayo Design System - component library",
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"es2015": "dist/esm/index.mjs",
	"es2017": "dist/esm/index.mjs",
	"types": "dist/types/components.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"unpkg": "dist/mayo-design-system/mayo-design-system.esm.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/ionic-team/stencil-component-starter.git"
	},
	"files": [
		"dist/",
		"loader/"
	],
	"scripts": {
		"build": "stencil build --docs",
		"build:watch": "stencil build --watch --docs",
		"start": "stencil build --dev --watch --serve",
		"test": "stencil test --spec --e2e",
		"test-coverage": "stencil test --spec --e2e --coverage",
		"test.watch": "stencil test --spec --e2e --watchAll",
		"generate": "stencil generate",
		"lint": "eslint src/**/*{.ts,.tsx}",
		"prettier": "npx prettier --check .",
		"prettier:fix": "npx prettier --write .",
		"storybook": "start-storybook -p 6006 -s dist",
		"build-storybook": "build-storybook",
		"story": "npm-run-all --parallel build:watch storybook"
	},
	"dependencies": {
		"@stencil/core": "^2.15.0",
		"@stencil/sass": "^1.5.2"
	},
	"devDependencies": {
		"@babel/core": "^7.17.9",
		"@stencil/eslint-plugin": "^0.4.0",
		"@storybook/addon-a11y": "^6.5.6",
		"@storybook/addon-actions": "^6.5.6",
		"@storybook/addon-essentials": "^6.5.6",
		"@storybook/addon-links": "^6.5.6",
		"@storybook/addon-notes": "^5.3.21",
		"@storybook/html": "^6.5.6",
		"@types/jest": "^27.0.3",
		"babel-loader": "^8.2.4",
		"eslint": "^8.13.0",
		"jest": "^27.4.5",
		"jest-cli": "^27.4.5",
		"npm-run-all": "^4.1.5",
		"prettier": "2.6.2",
		"puppeteer": "^10.0.0"
	},
	"license": "MIT"
}
